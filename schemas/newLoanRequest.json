{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "New Loan Application Schema",
  "required": ["borrowerId", "amtRequested", "purposeId", "term"],
  "properties": {
    "borrowerId": {
      "type": "integer"
    },
    "amtRequested": {
      "type": "number",
